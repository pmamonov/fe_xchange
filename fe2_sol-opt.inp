&GLOBAL
  PROJECT FE_OPT
  RUN_TYPE  energy
  PREFERRED_FFT_LIBRARY FFTMKL # FFTW
  PRINT_LEVEL LOW
&END GLOBAL

&MOTION
  &GEO_OPT
    OPTIMIZER BFGS
    MAX_ITER 1000
    MAX_FORCE 5.0E-4
  &END
  &PRINT
    &TRAJECTORY ON
      FORMAT DCD
      FILENAME =fe2_opt.dcd
    &END TRAJECTORY
  &END
&END MOTION


&FORCE_EVAL
  METHOD QS

  &DFT
    &PRINT
      &E_DENSITY_CUBE ON
        &EACH
          MD 10
        &END
      &END
    &END

    CHARGE 2
    MULTIPLICITY 5
    UKS TRUE
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL

    &MGRID
      CUTOFF 280
      COMMENSURATE
      NGRIDS 5
    &END MGRID

    &QS
      METHOD GPW
      EXTRAPOLATION PS
      MAP_CONSISTENT T
    &END QS

    &SCF
      SCF_GUESS RESTART
#      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-5
      MAX_SCF 500
      EPS_EIGVAL 1.0e-7
      CHOLESKY REDUCE

      &OT T
        PRECONDITIONER FULL_ALL
        ENERGY_GAP 0.005
	      MINIMIZER CG
      &END OT
    &END SCF

    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC

    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER PERIODIC
    &END POISSON
  &END DFT

  &SUBSYS
    &CELL
      ABC 10 10 10
      PERIODIC XYZ
    &END CELL

    &coord
@include 'fe_sol_10.coord'
    &end

    &KIND Fe
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q16
    &END KIND

    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND

    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q1
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
